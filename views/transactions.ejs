  $(document).ready(function() {
    var api_key = '05e17b4bd6bf6ecd3df2947c027ce523';
    var hash = '00000000000000009cc33fe219537756a68ee5433d593034b6dc200b34aa35fa';
    var url = 'https://api.chain.com/v1/bitcoin/blocks/' + hash;
    $.ajax({
      url: url,
      type: 'GET',
      beforeSend: function (xhr) {
        xhr.setRequestHeader ('Authorization', 'Basic ' + btoa(api_key));
      },
      success: function(data) {
        var hash = data.hash;
        var time = data.time;

        $('#one').append(hash);
        $('#two').append(time);
      },
      error: function(req, msg, err) {
        console.log(err);
      }
    });
  });
</script>
